<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AppBaseTheme" parent="@android:style/Theme.Material.Light">
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/black</item>
	    <item name="android:textColorTertiary">@android:color/black</item>
	    <item name="android:colorButtonNormal">@color/totemblue</item>
	    <item name="android:colorControlNormal">@color/totemblue</item>
	    <item name="android:colorPrimary">@color/totemblue</item>
	    <item name="android:colorAccent">@color/totemblue</item>
	    <item name="android:statusBarColor">@color/totemdarkblue</item>
	    <item name="android:actionBarStyle">@style/MyActionBar</item>
	    <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
	</style>

	<style name="AppThemeNoAction" parent="@android:style/Theme.Material.Light.NoActionBar">
		<item name="android:colorPrimary">@color/totemblue</item>
		<item name="android:textColorPrimary">@android:color/black</item>
		<item name="android:textColorSecondary">@android:color/black</item>
	    <item name="android:textColorTertiary">@android:color/black</item>
	    <item name="android:colorButtonNormal">@color/totemblue</item>
	    <item name="android:colorControlNormal">@color/totemblue</item>
	    <item name="android:colorAccent">@color/totemblue</item>
	    <item name="android:statusBarColor">@color/totemdarkblue</item>
	</style>

	<style name="MyActionBar" parent="@style/AppBaseTheme">
        <item name="android:background">@color/totemblue</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MyCustomTheme.OverFlow" parent="@android:style/Theme.Material.Light">
    	<item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    	<item name="android:paddingRight">15dp</item>
	</style>
</resources>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AppBaseTheme" parent="@android:style/Theme.Material.Light">
		<item name="android:textColorPrimary">#000</item>
		<item name="android:textColorSecondary">#000</item>
	    <item name="android:textColorTertiary">#000</item>
	    <item name="android:colorButtonNormal">#005C9D</item>
	    <item name="android:colorControlNormal">#005C9D</item>
	    <item name="android:colorAccent">#005C9D</item>
	    <item name="android:statusBarColor">#004474</item>
	    <item name="android:actionBarStyle">@style/MyActionBar</item>
	    <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
	</style>

	<style name="AppThemeNoAction" parent="@android:style/Theme.Material.Light.NoActionBar">
		<item name="android:textColorPrimary">#000</item>
		<item name="android:textColorSecondary">#000</item>
	    <item name="android:textColorTertiary">#000</item>
	    <item name="android:colorButtonNormal">#005C9D</item>
	    <item name="android:colorControlNormal">#005C9D</item>
	    <item name="android:colorAccent">#005C9D</item>
	    <item name="android:statusBarColor">#004474</item>
	     <item name="android:actionBarStyle">@style/MyActionBar</item>
	</style>

	<style name="MyActionBar" parent="@style/AppBaseTheme">
        <item name="android:background">#005C9D</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="android:colorControlActivated">#fff</item>
        <item name="android:colorControlHighlight">#fff</item>
        <item name="android:colorControlNormal">#fff</item>
        <item name="android:colorAccent">#fff</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyCustomTheme.OverFlow" parent="@android:style/Theme.Material.Light">
    	<item name="android:src">@drawable/ic_more_vert_white_48dp</item>
    	<item name="android:paddingRight">15dp</item>
	</style>
</resources>
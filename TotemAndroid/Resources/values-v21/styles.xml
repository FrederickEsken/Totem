<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AppTheme" parent="AppBaseTheme">
		  <item name="android:textColorPrimary">@android:color/black</item>
		  <item name="android:textColorSecondary">@android:color/black</item>
	    <item name="android:textColorTertiary">@android:color/black</item>
	    <item name="android:colorButtonNormal">@color/totemblue</item>
      <item name="android:statusBarColor">@color/totemdarkblue</item>
      <item name="android:actionBarStyle">@style/MyActionBarMaterial</item>
      <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
	</style>

	<style name="AppThemeNoAction" parent="AppBaseThemeNoAction">
	    <item name="android:statusBarColor">@color/totemdarkblue</item>
	</style>

	<style name="MyActionBarMaterial" parent="AppBaseTheme">
      <item name="android:background">@color/totemblue</item>
      <item name="android:textColorSecondary">@android:color/white</item>
  </style>

  <style name="ColoredButton" parent="Base.Widget.AppCompat.Button.Colored">
      <item name="android:colorButtonNormal">@color/totemblue</item>
      <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="CustomImageButton" parent="Base.Widget.AppCompat.ImageButton">
      <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="CheckBoxBackground" parent="AppBaseTheme">
  </style>

   <style name="MyCustomTheme.OverFlow" parent="@android:style/Theme.Material.Light">
      <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
      <item name="android:paddingRight">15dp</item>
	</style>  
</resources>